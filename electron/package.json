{
  "name": "wastack-desktop",
  "version": "1.0.0",
  "description": "WAStack Desktop",
  "author": "WAStack",
  "main": "main.cjs",
  "scripts": {
    "dist": "electron-builder --publish never",
    "dist:dir": "electron-builder --win --x64 --dir"
  },
  "build": {
    "appId": "com.wastack.desktop",
    "productName": "WAStack",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "asar": true,
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "../wa-panel-ui/dist",
        "to": "wa-panel-ui/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../wa-gateway/master.js",
        "to": "wa-gateway/master.js"
      },
      {
        "from": "../wa-gateway/server.js",
        "to": "wa-gateway/server.js"
      },
      {
        "from": "../wa-gateway/package.json",
        "to": "wa-gateway/package.json"
      },
      {
        "from": "../wa-gateway/docs",
        "to": "wa-gateway/docs",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./vendor/node",
        "to": "vendor/node",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "WAStack"
    },
    "publish": [],
    "asarUnpack": [
      "**/wa-gateway/**"
    ]
  }
}
